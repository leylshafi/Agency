@model Category
<div class="container">
	<h1 class="m-5">@Model.Name</h1>
	<div class="d-flex flex-wrap">
		@foreach (Product product in Model.Products)
		{
			<div class="card m-1" style="width: 18rem;">
				<img src="~/assets/img/@product.ImageUrl" class="card-img-top" alt="...">
				<div class="card-body">
					<h5 class="card-title">@product.Name</h5>
				</div>
			</div>
		}
	</div>
</div>
